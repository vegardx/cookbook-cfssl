[Unit]
Description=CloudFlare SSL Server Daemon
After=network-online.target

[Service]
Type=simple
User=<%= node['cfssl']['service']['user'] %>
Group=<%= node['cfssl']['service']['group'] %>
UMask=007

ExecStart=<%= node['cfssl']['install_path'] %>/cfssl serve -address <%= node['cfssl']['service']['bind'] %> -port <%= node['cfssl']['service']['port'] %> -ca <%= node['cfssl']['config_path'] %>/ca/example.com.pem -ca-key <%= node['cfssl']['config_path'] %>/ca/example.com-key.pem -config <%= node['cfssl']['config_path'] %>/conf/authsign.json

Restart=on-failure

TimeoutStopSec=300

[Install]
WantedBy=multi-user.target
